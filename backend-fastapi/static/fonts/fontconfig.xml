<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<fontconfig>
  <!-- Add custom font directory -->
  <dir>/app/static/fonts</dir>
  
  <!-- Map font family names -->
  <alias>
    <family>Bitter</family>
    <prefer>
      <family>Bitter</family>
    </prefer>
  </alias>
  
  <!-- Set Bitter as preferred serif font after Noto Serif -->
  <alias>
    <family>serif</family>
    <prefer>
      <family>Bitter</family>
      <family>Noto Serif</family>
    </prefer>
  </alias>
</fontconfig>